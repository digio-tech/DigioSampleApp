<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/medium">

        <EditText
            android:id="@+id/document_id_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Document Id" />

        <EditText
            android:id="@+id/email_mobile_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email" />
        <EditText
            android:id="@+id/gwt_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Token" />

        <EditText
            android:id="@+id/service_mode_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Service mode" />


        <EditText
            android:id="@+id/env_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Environment" />


        <Button
            android:id="@+id/sign_now_btm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium"
            android:text="Proceed" />

        <Button
            android:id="@+id/start_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium"
            android:text="Webview Start" />

        <Spinner
            android:id="@+id/service_mode_spiner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/environment_spiner"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/testing_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>

